<h1>Login</h1>

<%=form_for @user, url: sessions_path, method: 'post' do |f|%>
    <%= f.label :name%>
    <%=f.text_field :name%><br>
    <%=f.label :password%>
    <%=f.text_field :password%><br>
    <%=f.label :password_confirmation%>
    <%=f.text_field :password_confirmation%><br>
    <%=f.submit "Log in"%>
<%end%>
<%=link_to "Signup", new_user_path%>
    